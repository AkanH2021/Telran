use mydb //creates database, if there is no any

db.createCollection('users')   //creates collection (empty one)

db.users.insertOne({name: "Akan", lastname:'Hodzha',age:43}) //adding just one user into database


db.users.insertMany([   //adding many users into database
    {
        name: 'Ivan',
        lastname: 'Ivanov',
        age: 43
    },
    {
        name: 'Maria',
        lastname: 'Ivanova',
        age: 41
    }
])

//Selection (въборка)

db.users.find({name: 'Ivan' }) //finds all users with given name parameter

db.users.findOne({name: 'Ivan' }) //finds the 1st user with given name parameter

db.users.find({age: 43 })   //finds all users with this parameter
db.users.findOne({age: 43 })   //finds the first user with this parameter